{
  "name": "chemquest-server",
  "version": "1.0.0",
  "description": "Backend server for ChemQuest Alchemist Academy",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:unit": "jest --testPathPattern=src/tests --testPathIgnorePatterns=performance --runInBand",
    "test:performance": "jest --testPathPattern=performance --runInBand --detectOpenHandles",
    "test:coverage": "jest --coverage --runInBand",
    "test:all": "npm run test:unit && npm run test:performance"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.1",
    "pg": "^8.11.3",
    "redis": "^4.6.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.0",
    "@types/nodemailer": "^6.4.19",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.16",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
